{
  "name": "chat-app",
  "version": "1.0.0",
  "description": "A real-time chat application built with React and Node.js",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "build": "pnpm run --recursive build",
    "lint": "pnpm run --recursive lint",
    "format": "pnpm run --recursive format",
    "type-check": "pnpm run --recursive type-check",
    "db:start": "docker compose up -d postgres",
    "db:stop": "docker compose down",
    "db:restart": "docker compose restart postgres",
    "db:logs": "docker compose logs -f postgres",
    "db:reset": "docker compose down -v && docker compose up -d postgres",
    "db:shell": "bash scripts/docker-db-shell.sh"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=8.0.0"
  },
  "volta": {
    "node": "22.21.1"
  }
}
